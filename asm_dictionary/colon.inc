%define pointer 0               ; Объявим пустой указатель
%macro colon 2                  ; Начало макроса %1 - ключа %2 - метка на значение
%%this:                         ; Объявим локальную метку, указывающую на текущий элемент
    dq pointer                  ; Расположим в памяти ссылку на предыдущий элемент
    db %1,0                     ; Расположим в памяти ключ с нуль-терминатором
    %define pointer %%this      ; Сместим указатель с предудыщего элемента на текущий
%2:                             ; Установим метку на значение
%endmacro
